<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <RelativeLayout
        android:id="@+id/Rv"
        android:background="#ff6666"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <EditText
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/back_tital"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/search_background"
            android:id="@+id/tv_title"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:hint="搜索"
            android:paddingTop="2dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/back_tital"
            android:src="@mipmap/abc_ic_ab_back_mtrl_am_alpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <wight.SelfScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="5dp"
                android:textColor="#000"
                android:text="热门推荐"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <wight.ScrollRecycle
                android:id="@+id/hot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:textColor="#000"
                    android:text="分类筛选"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/moreclass"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:text="更多选择"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <wight.ScrollRecycle
                android:id="@+id/classhot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:textColor="#000"
                    android:text="商城筛选"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:text="更多选择"
                    android:id="@+id/moreshangcheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:padding="5dp"
                android:textColor="#9c9696"
                android:text="国内超市"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <wight.ScrollRecycle
                android:id="@+id/guoneigoods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="5dp"
                android:textColor="#9c9696"
                android:text="海外超市"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <wight.ScrollRecycle
                android:id="@+id/haiwaigoods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </wight.SelfScrollView>

</LinearLayout>